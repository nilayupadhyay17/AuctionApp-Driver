<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.upadhyay.nilay.driver.UserInterface.PlaceBid">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/Hurryup"
        android:text="Hurry Up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/TimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/Hurryup"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/currLocation"
        android:layout_below="@id/TimeLeft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginTop="70dp"
        android:hint="Enter your Location"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />
    <EditText
        android:id="@+id/editTextBid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginTop="35dp"
        android:hint="Enter the Bid"
        android:textColorHint="@android:color/white"
        android:maxLength="9"
        android:textColor="@android:color/white"
        android:layout_below="@id/currLocation"
        />


    <Button
        android:id="@+id/buttonPlaceBid"
        android:layout_below="@id/editTextBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_add_font_size"
        android:background="@drawable/bg_btn_add_it"
        android:paddingLeft="@dimen/vertical_padding"
        android:paddingRight="@dimen/vertical_padding"
        android:paddingTop="@dimen/horizontal_padding"
        android:paddingBottom="@dimen/horizontal_padding"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/btn_add_color"
        android:text="@string/placeBid"
        android:layout_centerHorizontal="true"
        />





</RelativeLayout>